{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "../build/electron",
    "rootDir": ".",
    "noEmitOnError": true,
    "typeRoots": ["../node_modules/@types"],
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["./**/*"],
  "exclude": ["../node_modules"]
}
